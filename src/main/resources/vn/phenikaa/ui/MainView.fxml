<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="rootPane"
           fx:controller="vn.phenikaa.controller.MainController"
           stylesheets="@main.css">

    <BorderPane prefWidth="1000" prefHeight="650">

        <!-- ================= HEADER ================= -->
        <top>
            <HBox spacing="12"
                  alignment="CENTER_LEFT"
                  styleClass="header">

                <Label text="QUẢN LÝ NHÂN SỰ"
                       styleClass="title"/>

                <ComboBox fx:id="cboTruong"
                          promptText="Chọn Trường"
                          prefWidth="220"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="txtSearch"
                           promptText="Nhập mã NV hoặc họ tên"
                           styleClass="search-field"/>

                <Button text="Tìm"
                        onAction="#search"
                        styleClass="btn-primary"/>

                <Button text="Tất cả"
                        onAction="#tatCa"
                        styleClass="btn-secondary"/>
            </HBox>
        </top>

        <!-- ================= SIDEBAR ================= -->
        <left>
            <VBox spacing="12" styleClass="sidebar">

                <Label text="CHỨC NĂNG"
                       styleClass="sidebar-title"/>

                <Button text="➕ Thêm Trường"
                        onAction="#themTruong"
                        styleClass="btn-menu"/>

                <Button text="➕ Thêm Giảng Viên"
                        onAction="#themGiangVien"
                        styleClass="btn-menu"/>

                <Button text="➕ Thêm Nhân Viên"
                        onAction="#themNhanVien"
                        styleClass="btn-menu"/>
            </VBox>
        </left>

        <!-- ================= CONTENT ================= -->
        <center>
            <VBox spacing="10" styleClass="content">

                <!-- ===== TAB ===== -->
                <TabPane fx:id="tabPane">
                    <Tab fx:id="tabAll" text="Tất cả" closable="false"/>
                    <Tab fx:id="tabGV" text="Giảng viên" closable="false"/>
                    <Tab fx:id="tabNV" text="Nhân viên" closable="false"/>
                </TabPane>


                <!-- ===== TABLE ===== -->
                <TableView fx:id="table" prefHeight="520">

                    <columns>
                        <TableColumn fx:id="colMa" text="Mã NV" prefWidth="120"/>
                        <TableColumn fx:id="colTen" text="Họ tên" prefWidth="200"/>
                        <TableColumn fx:id="colEmailTruong"
                                     text="Email trường"
                                     prefWidth="250"/>
                        <TableColumn fx:id="colLoai" text="Loại" prefWidth="120"/>
                        <TableColumn fx:id="colLuong" text="Lương" prefWidth="120"/>
                        <TableColumn fx:id="colAction" text="Thao tác" prefWidth="120"/>
                    </columns>

                </TableView>

            </VBox>
        </center>

    </BorderPane>
</StackPane>
